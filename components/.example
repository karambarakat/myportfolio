import __ from 'classnames'
import s from './xxxx.module.scss'
/**
.base {
  font-weight: 100;
  text-decoration-line: underline;
}

.size {
  &_big{
    font-size: 1.5rem ;
    line-height: 2rem ;
  }
}

.boolean {
  background-color: red;
}
 */

interface Props
  extends React.DetailedHTMLProps<
    React.HTMLAttributes<HTMLButtonElement>,
    HTMLButtonElement
  > {
  size?: 'big' | 'normal'
  boolean?: boolean
}

export default function Button({
  size = 'big',
  boolean,
  className,
  ...rest
}: Props) {
  return (
    <button
      {...rest}
      className={__(
        s.base,
        {
          [s.boolean]: boolean,
        },
        {
          big: s.size_big,
          normal: s.size_normal,
        }[size],
        className
      )}
    />
  )
}
